<!-- Logo/Title -->
<div class="mb-8">
  <a href="{{ '/' | url }}" class="block">
    <h1 class="text-2xl font-display font-bold text-americana-crimson mb-1">
      USAU
    </h1>
    <p class="text-xs text-americana-textMuted">
      United States of America United
    </p>
  </a>
</div>

<!-- Progress Indicator -->
<div class="mb-6" x-data="{
  progress: $store.story ? $store.story.getProgress({{ storyGraph.stats.totalNodes }}) : 0
}">
  <div class="mb-2 flex justify-between items-center">
    <span class="text-xs text-americana-textMuted">Progress</span>
    <span class="text-xs font-mono text-americana-gold" x-text="progress + '%'"></span>
  </div>
  <div class="progress-bar">
    <div class="progress-fill" :style="`width: ${progress}%`"></div>
  </div>
</div>

<!-- Navigation Links -->
<nav class="space-y-6">

  <!-- Home -->
  <div>
    <a href="{{ '/' | url }}" class="nav-link {{ 'nav-link-active' if page.url == '/' }}">
      <span class="font-sans">Home</span>
    </a>
  </div>

  <!-- Current Location -->
  <div x-show="$store.story && $store.story.currentNode">
    <h3 class="text-xs font-semibold text-americana-textMuted uppercase tracking-wider mb-2">
      Current Location
    </h3>
    <div class="text-sm text-americana-text font-mono p-2 bg-americana-navy/30 rounded">
      <span x-text="$store.story ? $store.story.currentNode : 'Loading...'"></span>
    </div>
  </div>

  <!-- Timeline -->
  <div>
    <h3 class="text-xs font-semibold text-americana-textMuted uppercase tracking-wider mb-2">
      Timeline
    </h3>
    <div class="space-y-1">
      {% for item in storyGraph.timeline | slice(0, 8) %}
      <a href="{{ ('/story/' + item.id + '/') | url }}"
         class="nav-link text-sm"
         :class="$store.story && $store.story.hasVisited('{{ item.id }}') ? 'text-americana-text' : 'text-americana-textMuted/50'"
      >
        <span class="font-mono text-xs text-americana-gold">{{ item.year }}</span>
        <span class="block">{{ item.title }}</span>
      </a>
      {% endfor %}
    </div>
  </div>

  <!-- Quick Actions -->
  <div>
    <h3 class="text-xs font-semibold text-americana-textMuted uppercase tracking-wider mb-2">
      Quick Actions
    </h3>
    <div class="space-y-2">
      <button
        @click="$store.story && $store.story.addBookmark($store.story.currentNode, 'Quick Save')"
        class="w-full text-left px-3 py-2 text-sm rounded bg-americana-surface border border-americana-border hover:border-americana-gold transition-colors"
      >
        Bookmark Current
      </button>
      <button
        @click="$store.story && $store.story.restart()"
        class="w-full text-left px-3 py-2 text-sm rounded bg-americana-surface border border-americana-border hover:border-americana-crimson transition-colors text-americana-textMuted hover:text-americana-crimson"
      >
        Restart Story
      </button>
    </div>
  </div>

  <!-- Stats -->
  <div class="pt-4 border-t border-americana-border" x-data="{
    stats: $store.story ? $store.story.getStats() : {}
  }">
    <h3 class="text-xs font-semibold text-americana-textMuted uppercase tracking-wider mb-2">
      Statistics
    </h3>
    <div class="space-y-1 text-sm">
      <div class="flex justify-between">
        <span class="text-americana-textMuted">Nodes Visited:</span>
        <span class="font-mono text-americana-text" x-text="stats.nodesVisited || 0"></span>
      </div>
      <div class="flex justify-between">
        <span class="text-americana-textMuted">Decisions Made:</span>
        <span class="font-mono text-americana-text" x-text="stats.decisionsMade || 0"></span>
      </div>
      <div class="flex justify-between">
        <span class="text-americana-textMuted">Bookmarks:</span>
        <span class="font-mono text-americana-text" x-text="stats.bookmarksCreated || 0"></span>
      </div>
    </div>
  </div>

</nav>
